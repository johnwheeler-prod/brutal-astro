---
import Layout from '@layouts/Default.astro';
import RecentBlogPosts from '@components/generic/RecentBlogPosts.astro';
import MobileSocials from '@components/home/MobileSocials.astro';
import { Pill } from '@eliancodes/brutal-ui';
import { Button } from '@eliancodes/brutal-ui';
import { Card } from '@eliancodes/brutal-ui';

const builtWith = [
  { name: 'AEO', url: 'https://www.seo.com/ai/answer-engine-optimization/' },
  { name: 'SEO', url: 'https://www.seo.com/basics/glossary/seo/' },
  {
    name: 'Web Development',
    url: 'https://www.figma.com/resource-library/web-design-and-development/',
  },
  { name: 'Small Business', url: 'https://www.sellerscommerce.com/blog/small-business-statistics/' },
  {
    name: 'Rock Climbing',
    url: 'https://carolinaclimbers.org/climbing-areas/rumbling-bald.html',
  },
  { name: 'Dungeons & Dragons', url: 'https://www.dndbeyond.com/' },
];
---

<Layout
  title='Home'
  pageTitle='John Wheeler | Home'
  description='John Wheeler is a web developer and AEO specialist, working to shape the future of Tehcnical SEO and AEO.'
>
  <main class='bg-pink p-6'>
    <MobileSocials />
    <section id='about' class='grid md:grid-cols-8 gap-8 mt-4'>
      <h2 class='hidden'>About John Wheeler</h2>
      <div class='col-span-4'>
        <Card>
          <div class='flex flex-col justify-between items-start gap-4'>
            <p class='mt-4 outfit text-2xl md:text-5xl lg:text-7xl'>
              John Wheeler is a <span class='text-white'>Developer</span>
            </p>
            <p class='mt-2 outfit text-xl md:text-3xl lg:text-5xl'>
              I implement web designs with high fidelity and an emphasis on accessibility, SEO, and AEO.
            </p>
            <Button target={'_self'} href='/blog/'>
              Check out the blog &rarr;
            </Button>
          </div>
        </Card>
      </div>
      <div class='col-span-2'>
        <Card>
          <h2 class='text-2xl md:text-4xl lg:text-6xl mb-8 dm-serif'>
            John blogs about
          </h2>
          <ul class='flex gap-4 flex-wrap'>
            {
              builtWith.map((item) => (
                <li>
                  <Pill>
                    <a
                      class='sanchez'
                      href={item.url}
                      target='_blank'
                      title={`Go to ${item.name}`}
                    >
                      {item.name}
                    </a>
                  </Pill>
                </li>
              ))
            }
          </ul>
        </Card>
      </div>
      <div class='col-span-2'>
        <Card>
          <h2 class='text-2xl md:text-4xl lg:text-6xl mb-4 dm-serif'>
            What do you do?
          </h2>
          <p class='poppins'>
            I’m a web developer who helps businesses get found and grow online. My specialties are marketing software integrations and SEO/AEO (search and answer engine optimization). I make sure your site performs where it matters most: in search results and across AI platforms.
          </p>
        </Card>
      </div>
    </section>
    <RecentBlogPosts />
  </main>
</Layout>
