---
import Layout from '@layouts/Default.astro';
import RecentBlogPosts from '@components/generic/RecentBlogPosts.astro';
import MobileSocials from '@components/home/MobileSocials.astro';
import { Pill } from '@eliancodes/brutal-ui';
import { Button } from '@eliancodes/brutal-ui';
import { Card } from '@eliancodes/brutal-ui';

const builtWith = [
  { name: 'AEO', url: 'https://www.seo.com/ai/answer-engine-optimization/' },
  { name: 'SEO', url: 'https://www.seo.com/basics/glossary/seo/' },
  {
    name: 'Web Development',
    url: 'https://www.figma.com/resource-library/web-design-and-development/',
  },
  { name: 'Small Business', url: 'https://www.sellerscommerce.com/blog/small-business-statistics/' },
  {
    name: 'Rock Climbing',
    url: 'https://carolinaclimbers.org/climbing-areas/rumbling-bald.html',
  },
  { name: 'Dungeons & Dragons', url: 'https://www.dndbeyond.com/' },
  { name: 'NHL', url: 'https://www.nhl.com/bruins/' },
];
---

<Layout
  title='Home'
  pageTitle='John Wheeler | Home'
  description='John Wheeler is a web developer and AEO specialist, working to shape the future of Tehcnical SEO and AEO.'
>
  <main class='bg-pink p-6'>
    <MobileSocials />
    <section id='about' class='grid md:grid-cols-8 gap-8 mt-4'>
      <h2 class='hidden'>About John Wheeler</h2>

      <div class='col-span-4'>
        <Card>
          <div class='flex flex-col justify-between items-start gap-4'>
            <p class='mt-4 outfit text-2xl md:text-5xl lg:text-7xl'>
              John Wheeler is a <span class='text-white'>Developer</span>
            </p>
            <p class='mt-2 outfit text-xl md:text-3xl lg:text-5xl'>
              I implement web designs with high fidelity and an emphasis on accessibility, SEO, and AEO.
            </p>
            <Button target={'_self'} href='/blog/'>
              Check out the blog &rarr;
            </Button>
          </div>
        </Card>
      </div>

      <div class='col-span-2'>
        <Card>
          <h2 class='text-2xl md:text-4xl lg:text-6xl mb-8 dm-serif'>
            John blogs about
          </h2>
          <ul class='flex gap-4 flex-wrap'>
            {
              builtWith.map((item) => (
                <li>
                  <Pill>
                    <a
                      class='sanchez'
                      href={item.url}
                      target='_blank'
                      title={`Go to ${item.name}`}
                    >
                      {item.name}
                    </a>
                  </Pill>
                </li>
              ))
            }
          </ul>
        </Card>
      </div>

      <div class='col-span-2'>
        <Card>
          <h2 class='text-2xl md:text-4xl lg:text-6xl mb-4 dm-serif'>
            What do you do?
          </h2>
          <p class='poppins'>
            I’m a web developer who helps businesses get found and grow online. My specialties are marketing software integrations and SEO/AEO (search and answer engine optimization). I make sure your site performs where it matters most: in search results and across AI platforms.
          </p>
        </Card>
      </div>
    </section>
    <RecentBlogPosts />
    <section id='more-about-me' class='grid md:grid-cols-8 gap-8 mt-4'>    
      <div class='col-span-4'>
        <Card client:load>
          <h2 class="text-2xl md:text-4xl lg:text-6xl mb-4 dm-serif">
            What I’m listening to
          </h2>
        
          <div class="relative w-full h-[352px]">
            <iframe
              id="spotify-frame-1"
              class="absolute inset-0 w-full h-full rounded-xl transition-opacity duration-700 opacity-100 z-10"
              src="https://open.spotify.com/embed/album/3hKlec1wgYVJcI0YvwCFJB?utm_source=generator"
              allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
              loading="lazy"
            ></iframe>
        
            <iframe
              id="spotify-frame-2"
              class="absolute inset-0 w-full h-full rounded-xl transition-opacity duration-700 opacity-0 z-0"
              src=""
              allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
              loading="lazy"
            ></iframe>
          </div>
        
          <script is:inline>
            const embeds = [
              "https://open.spotify.com/embed/album/3hKlec1wgYVJcI0YvwCFJB?utm_source=generator",
              "https://open.spotify.com/embed/album/1QZJzByKliJB2xyhgrYk4j?utm_source=generator",
              "https://open.spotify.com/embed/album/3g4koxypokRF6kR3KA5F0P?utm_source=generator"
            ];
        
            let index = 0;
            let active = 1;
        
            const frame1 = document.getElementById("spotify-frame-1");
            const frame2 = document.getElementById("spotify-frame-2");
        
            setInterval(() => {
              index = (index + 1) % embeds.length;
              const nextFrame = active === 1 ? frame2 : frame1;
              const currentFrame = active === 1 ? frame1 : frame2;
        
              // preload next embed
              nextFrame.src = embeds[index];
        
              // fade out current, fade in next
              currentFrame.classList.add("opacity-0");
              currentFrame.classList.remove("z-10");
              currentFrame.classList.add("z-0");
        
              nextFrame.classList.remove("opacity-0");
              nextFrame.classList.remove("z-0");
              nextFrame.classList.add("z-10");
        
              // swap active
              active = active === 1 ? 2 : 1;
            }, 8000);
          </script>
        </Card>        
      </div>
    </section>
  </main>
</Layout>
