---
import { Card } from '@eliancodes/brutal-ui';
import { Image } from 'astro:assets';

interface Props {
  title: string;
  imgSrc: ImageMetadata;
  imgAlt: string;
  description: string;
}

const { title, imgAlt, imgSrc, description } = Astro.props;
---

<Card color='white'>
  <h3 class='poppins text-lg md:text-xl'>{title}</h3>
  <div class="rounded-lg border-3 border-black my-4 h-56 overflow-hidden flex items-center">
    <Image
      src={imgSrc}
      alt={imgAlt}
      width={800}
      height={400}
      class="w-full object-cover object-center rounded"
    />
  </div>
  <p class='poppins'>{description}</p>
  <slot />
</Card>
